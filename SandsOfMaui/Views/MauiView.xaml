<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SandsOfMaui.MauiView"
             xmlns:telerik="http://schemas.telerik.com/2022/xaml/maui"
             Title=".NET MAUI">

    <telerik:RadBusyIndicator x:Name="MauiWebpageFetchIndicator"
                                              AnimationType="Animation8"
                                              AnimationContentHeightRequest="150"
                                              AnimationContentWidthRequest="150"
                                              AnimationContentColor="#674bb2"
                                              IsBusy="True">
        <telerik:RadBusyIndicator.Content>
            <WebView x:Name="MauiWebpageHTML" Source="https://dotnet.microsoft.com/en-us/apps/maui" Navigated="MauiWebpageHTML_Navigated" />
        </telerik:RadBusyIndicator.Content>
    </telerik:RadBusyIndicator> 

</ContentPage>
